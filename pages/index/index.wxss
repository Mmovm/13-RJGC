.word-card {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin: 40rpx 0;
}

.word {
  font-size: 64rpx;
  font-weight: bold;
  color: #2c3e50;
}

.translation {
  display: block;
  font-size: 36rpx;
  color: #7f8c8d;
  margin-top: 20rpx;
}

.controls {
  display: flex;
  gap: 20rpx;
}
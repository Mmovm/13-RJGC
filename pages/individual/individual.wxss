/* pages/individual/individual.wxss */
.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

.menu-item {
  padding: 40rpx;
  background: #fff;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #eee;
}